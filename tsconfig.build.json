{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es5",
    "outDir": "build",
    "sourceMap": false,
    "moduleResolution": "node",
    "pretty": false,
    "esModuleInterop": true,
    "module": "commonjs",
  },
  "experimentalDecorators": true,
  "include": [
    "src/**/*",
    "index.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "compileOnSave": true,
  "lib": ["es2017", "es6", "dom"]
}